<Window x:Class="WpfInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="708" Width="1035.8" HorizontalAlignment="Center" VerticalAlignment="Top">
    <Grid Width="500" Height="300">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="MainImage" HorizontalAlignment="Center" Height="300" Margin="-66,-180,66,180" VerticalAlignment="Center" Width="500" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.23"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Canvas x:Name="skeletonCanvas" HorizontalAlignment="Center" Height="300" VerticalAlignment="Center" Width="500" Grid.ColumnSpan="2" Margin="-154,-108,154,108">
            <Slider x:Name="sliderAngle" MouseUp="Slider_MouseUp" Canvas.Left="804" Canvas.Top="529" Height="33" Width="150" ValueChanged="Slider_ValueChanged_2" Maximum="26" Value="5" SmallChange="1"/>
        </Canvas>
        <TextBox x:Name="speechRecognized" HorizontalAlignment="Left" Height="46" Margin="474,-56,-248,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="speechHypothezised" HorizontalAlignment="Left" Height="37" Margin="474,45,-248,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="speechDetected" HorizontalAlignment="Left" Height="36" Margin="474,135,-248,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="speechRejected" HorizontalAlignment="Left" Height="37" Margin="474,225,-248,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button x:Name="RecordingButton" Content="Start Recording" HorizontalAlignment="Left" Margin="-242,-128,0,0" VerticalAlignment="Top" Width="98" Height="52" Click="RecordingButton_Click"/>
        <Button x:Name="PlayButton" Content="Play" HorizontalAlignment="Left" Margin="-242,-62,0,0" VerticalAlignment="Top" Width="98" Height="52" Click="PlayButton_Click"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="-242,80,0,0" VerticalAlignment="Top" Width="98" Height="52" Click="SaveButton_Click"/>
        <Button x:Name="LoadButton" Content="Load" HorizontalAlignment="Left" Margin="-242,153,0,0" VerticalAlignment="Top" Width="98" Height="52" Click="LoadButton_Click"/>
        <Button x:Name="CompareButton" Content="Compare" HorizontalAlignment="Left" Margin="474,302,-248,-38" VerticalAlignment="Top" Width="120" Height="36" Click="CompareButton_Click" Grid.Column="1"/>
        <TextBox x:Name="bestDiff" HorizontalAlignment="Left" Height="51" Margin="-242,342,0,-93" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="98"/>
        <TextBox x:Name="upperRight" HorizontalAlignment="Left" Height="46" Margin="302,-59,-76,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="middleRight" HorizontalAlignment="Left" Height="46" Margin="302,160,-76,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="lowerRight" HorizontalAlignment="Left" Height="46" Margin="302,347,-76,-93" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="upperLeft" HorizontalAlignment="Left" Height="46" Margin="-86,-59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="middleLeft" HorizontalAlignment="Left" Height="46" Margin="-86,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="lowerLeft" HorizontalAlignment="Left" Height="46" Margin="-86,347,0,-93" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="445,403,-267,-126" TextWrapping="Wrap" Text="Camera elevation angle" VerticalAlignment="Top" Width="168"/>
        <TextBox HorizontalAlignment="Left" Height="77" Margin="80,-184,0,0" TextWrapping="Wrap" Text="Kinect Client" VerticalAlignment="Top" Width="344" FontSize="55" Grid.ColumnSpan="2" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" FontWeight="Bold"/>
    </Grid>
</Window>
